<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Parking QR"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Vehicle Number -->
        <EditText
            android:id="@+id/etVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Number (DL 01 AB 1234)"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Parking Facility -->
        <EditText
            android:id="@+id/etParkingFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parking Facility"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Zone -->
        <EditText
            android:id="@+id/etZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zone"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Level -->
        <EditText
            android:id="@+id/etLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Level"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Spot -->
        <EditText
            android:id="@+id/etSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Spot"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Latitude -->
        <EditText
            android:id="@+id/etLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Longitude -->
        <EditText
            android:id="@+id/etLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="24dp" />

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Parking QR"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="@drawable/btn_primary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- QR Code Preview -->
        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:visibility="gone"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save to Gallery"
            android:visibility="gone"
            android:background="@drawable/btn_secondary"
            android:textColor="#1565C0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
