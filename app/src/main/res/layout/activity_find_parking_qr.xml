<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find My Parking QR"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Vehicle Number:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etVehicleNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DL 01 AB 1234"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnFindQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Existing QR Code"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGenerateParkingQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate New Parking QR"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="@color/green_500"
        android:textColor="@android:color/white" />

</LinearLayout>